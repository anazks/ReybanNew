<div class="Items" style="overflow-x: scroll;">
  <div class="container">
    {{#each products}}
    <div class="row">
      <div class="col-lg-3">
        <div class="card">
          <img class="productImg" src="images/products/{{this.img}}" alt="" />
          <div class="card-body">
            <div class="row">
              <div class="card-title">
                <h4>{{this.Name}}</h4>
                <h3>â‚¹{{this.price}}</h3>
              </div>
              <div class="view-btn">
                <a href="/addTocart/{{this.id}}">Add To Cart <span class="fa fa-shopping-cart"></span> </a>
              </div>
            </div>
            <hr/>
            <p>
              {{this.description}}
            </p>
            <div class="btn-group">
              <div class="btn">
                <a href="/createDirectOrder/{{this.price}}/{{this.id}}">Buy Now</a>
              </div>
              <a href=""> Cancel</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

</div>
